<%= render "shared/header" %>
<main>
  <section class="wrapper-a">
    <h1>生まれた時も、今も忘れない</h1>
  </section>
  <section class="wrapper-b">
    <h1>管理詳細</h1>
    <ul class="pet-list">
      <% @pets.each do |p| %>
        <li class="">
        <%= link_to pet_path(p.id) do %>
          <div class="">
            <%= image_tag p.image, class: "pet-image" %>
          </div>
        <% end %>
        </li>
      <% end %>
    </ul>
  </section>
</main>
<%= render "shared/footer" %>